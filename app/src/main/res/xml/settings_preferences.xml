<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="category_main"
        app:title="常规">

        <Preference
            app:icon="@drawable/ic_close"
            app:key="setting_close"
            app:summary="0.0MB"
            app:title="清理缓存" />

        <Preference
            app:icon="@drawable/ic_list"
            app:key="setting_node"
            app:summary="分流1"
            app:title="选择网络分流" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            app:icon="@drawable/ic_punch"
            app:key="setting_punch"
            app:summary="关闭"
            app:title="自动签到" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="category_view"
        app:title="界面">
        <Preference
            app:icon="@drawable/ic_night"
            app:key="setting_night"
            app:summary="跟随系统"
            app:title="夜间模式" />

        <Preference
            app:icon="@drawable/ic_time"
            app:key="setting_night_time"
            app:summary="当前夜间模式时间22:00-6:00"
            app:title="自定义夜间模式时间" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="category_app"
        app:title="应用">

        <Preference
            app:icon="@drawable/ic_widgets"
            app:key="setting_app_ver"
            app:summary="当前版本"
            app:title="应用版本" />

        <Preference
            app:icon="@drawable/ic_applications"
            app:key="setting_app_info"
            app:summary="跳转到系统设置查看应用信息"
            app:title="应用信息" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="category_user"
        app:title="账号">

        <Preference
            app:icon="@drawable/ic_key"
            app:key="setting_change_password"
            app:summary="修改密码"
            app:title="修改密码" />

        <Preference
            app:icon="@drawable/ic_exit"
            app:key="setting_exit"
            app:summary="退出当前账号"
            app:title="退出登录" />

    </PreferenceCategory>
</PreferenceScreen>
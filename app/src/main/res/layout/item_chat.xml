<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <LinearLayout
            android:id="@+id/chat_layout_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="68dp"
            android:orientation="horizontal">
            <!--头像-->
            <RelativeLayout
                android:id="@+id/chat_avatar_layout_l"
                android:layout_width="64dp"
                android:layout_height="64dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/chat_avatar_l"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_avatar_2"
                    app:shapeAppearance="@style/CircleStyle"
                    />

                <ImageView
                    android:id="@+id/chat_character_l"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/chat_content_layout_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/chat_level_l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:textSize="12sp"
                        android:textColor="@color/pink"/>
                    <TextView
                        android:id="@+id/chat_name_l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:text="用户名"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/chat_message_layout_l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical"
                        android:background="@drawable/shape_chat_bg"
                        android:padding="10dp">

                        <!--                回复的消息-->
                        <LinearLayout
                            android:id="@+id/chat_reply_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_chat_reply_bg"
                            android:layout_marginBottom="8dp"
                            android:visibility="visible"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/chat_reply_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="10dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:text="用户名"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="10dp">
                                <TextView
                                    android:id="@+id/chat_reply"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="消息"
                                    android:textSize="13sp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/chat_at_l"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textColor="@color/pink"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/chat_content_l"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="消息"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/chat_time_l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:visibility="gone"
                        android:textSize="8dp"
                        android:text=""/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/chat_layout_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_alignParentEnd="true">
            <!--头像-->
            <RelativeLayout
                android:id="@+id/chat_avatar_layout_r"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentEnd="true">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/chat_avatar_r"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_avatar_2"
                    app:shapeAppearance="@style/CircleStyle"
                    />

                <ImageView
                    android:id="@+id/chat_character_r"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/chat_content_layout_r"
                android:layout_toStartOf="@id/chat_avatar_layout_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chat_name_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="用户名"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:background="@color/pink"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/chat_content_r"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消息"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/chat_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_chat_notification_bg"
            android:paddingStart="6dp"
            android:paddingTop="3dp"
            android:paddingEnd="6dp"
            android:paddingBottom="3dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>
</layout>
